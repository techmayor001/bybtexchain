        .testimonial-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 20px 40px rgba(99, 102, 241, 0.2);
        }

        .testimonial-header {
            display: flex;
            align-items: center;
            margin-bottom: 20px;
        }

        .testimonial-avatar {
            width: 60px;
            height: 60px;
            border-radius: 50%;
            background: linear-gradient(135deg, #6366f1, #a855f7);
            display: flex;
            align-items: center;
            justify-content: center;
            color: #fff;
            font-size: 24px;
            font-weight: bold;
            margin-right: 15px;
        }

        .testimonial-info h4 {
            color: #1e293b;
            margin-bottom: 5px;
        }

        .testimonial-info p {
            color: #64748b;
            font-size: 14px;
        }

        .testimonial-rating {
            color: #fbbf24;
            margin-bottom: 15px;
        }

        .testimonial-text {
            color: #475569;
            line-height: 1.8;
            font-style: italic;
        }

        /* Stats Section */
        .stats {
            position: relative;
            padding: 80px 5%;
            background: linear-gradient(135deg, rgba(99, 102, 241, 0.1), rgba(168, 85, 247, 0.1));
            z-index: 1;
        }

