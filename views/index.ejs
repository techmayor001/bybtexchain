            box-shadow: 0 20px 40px rgba(99, 102, 241, 0.2);
            border-color: #6366f1;
        }

        .community-icon {
            font-size: 48px;
            margin-bottom: 20px;
            background: linear-gradient(135deg, #6366f1, #a855f7);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .community-card h3 {
            font-size: 24px;
            color: #1e293b;
            margin-bottom: 15px;
        }

        .community-card p {
            color: #64748b;
            margin-bottom: 20px;
            line-height: 1.6;
        }

        .btn-community {
            background: linear-gradient(135deg, #6366f1, #a855f7);
            color: #fff;
            padding: 12px 30px;
            border-radius: 25px;
            text-decoration: none;
            display: inline-block;
            transition: all 0.3s ease;
        }

        .btn-community:hover {
